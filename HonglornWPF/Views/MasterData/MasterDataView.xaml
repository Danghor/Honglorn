<UserControl x:Class="HonglornWPF.Views.MasterDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HonglornWPF.Views"
             xmlns:masterData="clr-namespace:HonglornWPF.Views.MasterData"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0">
            <ListViewItem Content="Jahrgänge" />
            <ListViewItem Content="Klassen" />
            <ListViewItem Content="Behinderungen" />
            <ListViewItem Content="Schüler" />
        </ListView>
        <ContentControl Grid.Column="1">
            <masterData:ClassListView/>
        </ContentControl>
    </Grid>
</UserControl>